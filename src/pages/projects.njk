---
layout: layouts/base.njk
title: Projects
permalink: /projects/
---

<section class="intro single">
    <div>
        <h2>Projects</h2>
        <p>A collection of things I've built—from group research projects to personal experiments.</p>
    </div>
</section>

{% set work = collections.projects | sort(attribute='date') | reverse %}
{% if work and work | length %}
<section>
    <div class="card-grid">
        {% for project in work %}
        <a class="card card--project" href="{{ project.url }}">
            {% if project.data.image %}
            <img src="{{ project.data.image }}" alt="{{ project.data.title }} preview">
            {% endif %}
            {% if project.data.tags %}
            <div class="tag-list">
                {% for tag in project.data.tags %}
                    {% if tag != 'projects' %}
                    <span class="tag-pill">{{ tag }}</span>
                    {% endif %}
                {% endfor %}
            </div>
            {% endif %}
            <p class="project-date">{{ project.data.date_range or (project.date | readableDate('monthYear')) }}</p>
            <h3>{{ project.data.title }}</h3>
            <p>{{ project.data.summary }}</p>
        </a>
        {% endfor %}
    </div>
</section>
{% else %}
<section>
    <p>Projects are being documented. Check back soon.</p>
</section>
{% endif %}

{% if repos and repos | length %}
<section class="repos-section">
    <h3>Other Repos</h3>
    <p class="section-subtitle">Smaller projects and experiments—mostly personal work.</p>
    <ul class="repo-list">
        {% for repo in repos %}
        <li class="repo-item">
            <a href="{{ repo.url }}" target="_blank" rel="noopener noreferrer">
                <span class="repo-info">
                    <span class="repo-name">{{ repo.name }}</span>
                    {% if repo.description %}<span class="repo-desc">{{ repo.description }}</span>{% endif %}
                </span>
                <span class="repo-link">View repo →</span>
            </a>
        </li>
        {% endfor %}
    </ul>
</section>
{% endif %}
